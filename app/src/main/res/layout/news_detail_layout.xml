<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Top Action Bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/topActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/back_arrow"
                android:contentDescription="Back"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <!-- Like Button -->
            <ImageView
                android:id="@+id/btnDetailLike"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/heart"
                android:contentDescription="Like"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="16dp"/>

            <!-- Bookmark Button -->
            <ImageView
                android:id="@+id/btnDetailBookmark"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bookmark"
                android:contentDescription="Bookmark"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="16dp"/>

            <!-- Read Later Button -->
            <ImageView
                android:id="@+id/btnDetailReadLater"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/history"
                android:contentDescription="Read Later"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <!-- Scrollable Content -->
    <ScrollView
    android:id="@+id/scrollableContent"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:fillViewport="true"
    app:layout_constraintTop_toBottomOf="@id/topActionBar"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp">

            <!-- News Title -->
            <TextView
                android:id="@+id/txtDetailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"/>

            <!-- News Image -->
            <ImageView
                android:id="@+id/imgDetailNews"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="News Image"
                android:layout_marginBottom="16dp"/>

            <!-- News Content/Body -->
            <TextView
                android:id="@+id/txtDetailContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"/>

            <!-- Bottom Info Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <!-- Upload Time -->
                <TextView
                    android:id="@+id/txtUploadTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textColor="#999999"/>

                <!-- Like Icon -->
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/heart"
                    android:contentDescription="Likes"
                    app:tint="#FF5252"
                    android:layout_marginEnd="4dp"/>

                <!-- Like Count -->
                <TextView
                    android:id="@+id/txtDetailLikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#FF5252"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>