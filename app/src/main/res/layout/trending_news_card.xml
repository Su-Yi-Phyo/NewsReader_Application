<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="12dp">

        <!-- News Image-->
        <ImageView
            android:id="@+id/imgTrendingNews"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:contentDescription="News Image"/>

        <!-- News Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <!-- News Title -->
            <TextView
                android:id="@+id/txtTrendingNewsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:maxLines="3"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"/>

            <!-- News Description -->
            <TextView
                android:id="@+id/txtTrendingNewsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#666666"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="1dp"/>

            <!-- Bottom Info Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <!-- Timestamp -->
                <TextView
                    android:id="@+id/txtTrendingNewsTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:textColor="#999999"/>

                <!-- Action Buttons -->
                <!-- Like Count with Icon -->
                <ImageView
                    android:id="@+id/btnTrendingLike"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/like"
                    android:contentDescription="Like"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/txtLikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#EE6F6F"
                    android:layout_marginEnd="16dp"/>

                <!-- Bookmark button-->
                <ImageView
                    android:id="@+id/btnTrendingBookmark"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/save"
                    android:contentDescription="Bookmark"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="8dp"/>

                <!-- Read Later button-->
                <ImageView
                    android:id="@+id/btnTrendingReadLater"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/history"
                    android:contentDescription="Read Later"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>