<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:navigationIcon="@drawable/back_arrow"
            app:navigationIconTint="@color/white"/>

        <!-- Logo -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:src="@drawable/user_big"
            android:adjustViewBounds="true" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập / Tạo tài khoản"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp" />

        <!-- Ô nhập email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#63454545"
            android:padding="12dp"
            android:layout_marginTop="44dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/email"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:paddingLeft="10dp"
                android:background="@android:color/transparent"
                android:hint="Nhập địa chỉ email của bạn"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/white"
                android:textColorHint="#777777" />
        </LinearLayout>

        <!-- Nút tiếp tục -->
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Tiếp tục"
            android:backgroundTint="#6E1E2E"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:enabled="true"
            app:cornerRadius = "8dp"/>

        <!-- Hoặc -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hoặc"
            android:textColor="#AAAAAA"
            android:layout_marginVertical="16dp" />

        <!-- Đăng nhập Google -->
        <Button
            android:id="@+id/btnGoogle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Đăng nhập bằng Google"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/black"
            android:drawableLeft="@drawable/google"
            android:drawablePadding="10dp"
            android:paddingStart="16dp"
            android:layout_marginTop="12dp"
            app:cornerRadius = "8dp"/>

        <!-- Ghi chú -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khi tiếp tục, bạn đồng ý với điều khoản sử dụng, chính sách bảo mật của chúng tôi."
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginTop="24dp"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>
</ScrollView>
